<h1>Service Health Monitor</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.url %></td>
        <td><%= service.is_healthy ? "Ativo" : "Inativo" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
